{
  "extends": ["@superlight/eslint-config"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": "."
  },
  "plugins": ["@typescript-eslint", "neverthrow"],
  "rules": {
    "neverthrow/must-use-result": "warn"
  }
}
