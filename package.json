{
  "name": "Superlight",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@7.29.3",
  "workspaces": {
    "packages": [
      "./apps/*",
      "./packages/*"
    ]
  },
  "scripts": {
    "ci": "turbo lint build test",
    "test": "turbo test",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev": "dotenv -- turbo dev --parallel",
    "reset": "rm -f pnpm-lock.yaml && git clean -xdf && pnpm prep",
    "prep": "pnpm install && husky install",
    "postinstall": "pnpm --filter @superlight/mobile postinstall"
  },
  "description": "MPC Crypto App with Banking UX. Fair, secure, elegant",
  "main": "index.js",
  "repository": "https://github.com/lauhon/superlight-app.git",
  "author": "Laurenz Honauer <laurenz.honauer@gmail.com>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@rnx-kit/metro-config": "^1.3.5",
    "@rnx-kit/metro-resolver-symlinks": "^0.1.26",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.19.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.4.1",
    "turbo": "^1.8.3"
  }
}
