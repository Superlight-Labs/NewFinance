{
  "name": "Superlight",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "./apps/*",
      "./packages/*"
    ]
  },
  "scripts": {
    "test": "turbo test",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev": "turbo dev --parallel",
    "reset": "rm -f yarn.lock && git clean -xdf && yarn install",
    "prep": "husky install && yarn db:start",
    "db:start": "cd ./packages/database && docker compose up"
  },
  "description": "MPC Crypto App with Banking UX. Fair, secure, elegant",
  "main": "index.js",
  "repository": "https://github.com/lauhon/superlight-app.git",
  "author": "Laurenz Honauer <laurenz.honauer@gmail.com>",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=18.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@rnx-kit/metro-config": "^1.3.5",
    "@rnx-kit/metro-resolver-symlinks": "^0.1.26",
    "eslint": "^8.19.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.4.1",
    "turbo": "^1.8.3"
  }
}
